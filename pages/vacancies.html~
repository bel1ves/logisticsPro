<script src="../jquery.js"></script>
<script src="../toastr.js" type="text/javascript"></script>
<script>
    function submitFormCallback(e) {
        e.preventDefault();
        toastr.success('Ваша заявка отправлена');
        $('#modal_callback').addClass('opacity-0');
        $('#modal_dialog_callback').addClass('scale-50');
        setTimeout(() => {
            $('#modal_callback').addClass('hidden');
        }, 150);
    }

    function closeModalCallback() {
        $('#modal_callback').addClass('opacity-0');
        $('#modal_dialog_callback').addClass('scale-50');
        setTimeout(() => {
            $('#modal_callback').addClass('hidden');
        }, 150);
    }

    function openModalCallback() {
        $('#modal_callback').removeClass('hidden')
        setTimeout(() => {
            $('#modal_callback').removeClass('opacity-0')
            $('#modal_dialog_callback').removeClass('scale-50');
        }, 10)
    }
</script>
<script>
    function sendForm(e) {
        e.preventDefault();
        toastr.success('Ваше резюме отправлено');
    }

    function closeModal() {
        $('#modal').addClass('opacity-0');
        $('#modal_dialog').addClass('scale-50');
        setTimeout(() => {
            $('#modal').addClass('hidden');
        }, 150);
    }

    function openModal(name) {
        $('#modal').removeClass('hidden')
        setTimeout(() => {
            $('#modal').removeClass('opacity-0')
            $('#modal_dialog').removeClass('scale-50');
        }, 10)

        $('#vacancy_name').text(name)
    }
</script>
