<script src="../jquery.js"></script>
<script src="../toastr.js" type="text/javascript"></script>
<script>
    function submitFormCallback(e) {
        e.preventDefault();
        toastr.success('Ваша заявка отправлена');
        $('#modal_callback').addClass('opacity-0');
        $('#modal_dialog_callback').addClass('scale-50');
        setTimeout(() => {
            $('#modal_callback').addClass('hidden');
        }, 150);
    }

    function closeModalCallback() {
        $('#modal_callback').addClass('opacity-0');
        $('#modal_dialog_callback').addClass('scale-50');
        setTimeout(() => {
            $('#modal_callback').addClass('hidden');
        }, 150);
    }

    function openModalCallback() {
        $('#modal_callback').removeClass('hidden')
        setTimeout(() => {
            $('#modal_callback').removeClass('opacity-0')
            $('#modal_dialog_callback').removeClass('scale-50');
        }, 10)
    }
</script>
<script>
    document.getElementById('form').addEventListener('submit', ((e) => {
        e.preventDefault();
        const type = document.getElementById('type').value;
        const weight = document.getElementById('weight').value;
        const transport = document.getElementById('transport').value;
        const insurance = document.getElementById('insurance').checked;
        const express = document.getElementById('express').checked;
        const package = document.getElementById('package').checked;

        let baseCost = weight * 100;
        if (type === 'fast') baseCost = weight * 150;
        if (type === 'fragile') baseCost = weight * 200;
        if (type === 'dangerous') baseCost = weight * 300;
        if (type === 'oversized') baseCost = weight * 250;

        if (transport === 'automobile') baseCost *= 1.2;
        if (transport === 'railway') baseCost *= 1.1;
        if (transport === 'avia') baseCost *= 1.4;
        if (transport === 'multimodal') baseCost *= 1.5

        if (insurance) baseCost *= 1.1;
        if (express) baseCost *= 1.3;
        if (package) baseCost += 5000;

        document.getElementById('price_container').classList.remove('hidden');
        document.getElementById('price').innerText = Math.round(baseCost) + " ₽"
    }));
</script>
